{
  "name": "syndrik - Python",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "njpwerner.autodocstring",
        "ms-python.flake8"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true
      }
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install -e . || true && pip install pytest || true",
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/syndric",
  "forwardPorts": [],
  "mounts": [
    "source=${localWorkspaceFolder}/.venv,target=/workspaces/syndric/.venv,type=bind,consistency=cached"
  ]
}
